@model Category
@{
    ViewData["Title"] = "Delete";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" value="@Model.Name" readonly/>
        </div>
        <div class="form-group">
            <form asp-action="DeleteConfirmed" class="d-inline-block">
                <input type="hidden" asp-for="Id"/>
                <input type="submit" value="Delete" class="btn btn-outline-danger m-2"/>
            </form>
                <a class="btn btn-outline-secondary m-2" asp-action="Index">Show All</a>
        </div>
    </div>
</div>