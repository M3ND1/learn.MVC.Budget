@model IEnumerable<Transaction>
@{
    ViewData["Title"] = "Transaction Page";
}
<h1> HELLO! TRANSACTION INDEX</h1>
<div class="float-end">
    <a class="btn btn-outline-success ml-4 m-2" asp-action="Create">Create New</a>
</div>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr> 
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.DateTime)</th>
            <th>@Html.DisplayNameFor(model => model.Sum)</th>
            <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td class="align-middle">@Html.DisplayFor(model => item.Id)</td>
                <td class="align-middle">@Html.DisplayFor(model => item.Name)</td>
                <td class="align-middle">@Html.DisplayFor(model => item.Description)</td>
                <td class="align-middle">@item.DateTime.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="align-middle">@Html.DisplayFor(model => item.Sum)</td>
                <td class="align-middle">@ViewBag.CategoryName</td>
                <td class="align-middle"><a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                <td class="align-middle"><a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                <td class="align-middle"><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>