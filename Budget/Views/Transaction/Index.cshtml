@model IEnumerable<Transaction>
@{
    ViewData["Title"] = "Transaction Page";
}
<h1> HELLO! TRANSACTION PAGE HERE</h1>
<a asp-action="Create" asp-controller="Transaction" class="btn btn-outline-success">Create</a>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr> 
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.DateTime)</th>
            <th>@Html.DisplayNameFor(model => model.Sum)</th>
            <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td class="align-middle">@Html.DisplayFor(model => item.Id)</td>
                <td class="align-middle">@Html.DisplayFor(model => item.Name)</td>
                <td class="align-middle">@Html.DisplayFor(model => item.Description)</td>
                <td class="align-middle">@item.DateTime.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="align-middle">@Html.DisplayFor(model => item.Sum)</td>
                <td class="align-middle">@ViewBag.CategoryName</td>
            </tr>
        }
    </tbody>
</table>