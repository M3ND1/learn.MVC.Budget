@model Transaction
@{
    ViewData["Title"] = "Transaction Page";
}
<div class="row text"> 
    <div class="col-md-8">
        <p>
            <h1>Transaction @Model.Name </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <input class="form-control" value="@Model.Name" readonly/>
                    </div>
                     <div class="form-group">
                        <input class="form-control" value="@Model.DateTime" readonly/>
                    </div>
                    <div class="form-group">
                        <input class="form-control" value="@Model.Sum" readonly/>
                    </div>
                    <div class="form-group">
                        <input class="form-control" value="@Model.Description" readonly/>
                    </div>
                    <div class="form-group">
                        <input class="form-control" value="@Model.CategoryId" readonly/>
                    </div>
                    <div class="form-group m-2">
                    <form asp-action="Delete"> 
                        <input class="btn btn-danger" type="submit" value="Confirm" asp-route-id="@Model.Id"/>
                        <input class="btn btn-outline-secondary" asp-action="Index" value="Show All"/>
                    </form>

                    </div>
            </div>
        </div>
    </div>
</div>         
